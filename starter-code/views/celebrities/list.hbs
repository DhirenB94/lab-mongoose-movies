<h2>List of Celebrities:</h2>
    {{#each celebritiesFromDB}}
        <p><a href="celebrities/{{id}}">{{name}}</a></p>

        <form action="/celebrities/{{id}}/edit" method="GET">
            <button type="submit">Edit</button>
        </form>
        
        <form action="/celebrities/{{id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
    {{/each}}